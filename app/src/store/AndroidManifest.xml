                android:name="android.support.PARENT_ACTIVITY"
                android:value=".services.ServicesActivity" />
        </activity>
        <activity
            android:name=".addeditstore.AddEditStoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".config.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".addeditstore.StoreDetailsFetcherActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".addeditservice.ServiceDetailsFetcherActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".tokens.TokensFetcherActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.RazorPayActivity"
            android:screenOrientation="portrait" />
