            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.RazorPayActivity" />
        <!-- Add your API key here -->
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_0vql5D6J04VFkX" />

        <activity
            android:name=".activity.QRCodeViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_qrcode_viewer"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activity.QRCodeScanner"
            android:label="@string/title_activity_qrcode_scanner"
            android:theme="@style/AppTheme" />
        <activity android:name=".ScannerActivity"></activity>
    </application>

